{
  "name": "wififly-backend",
  "version": "1.0.0",
  "description": "WiFiFly Express backend with SQLite",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
